{
  "extends": "../tsconfig.react.json",
  "compilerOptions": {
    "outDir": "dist/esm",
    "rootDir": "src",
    "declarationDir": "./dist/types",
    
    "skipLibCheck": true,
    "paths": {
      "react": [ "./node_modules/@types/react" ]
    }
  },
  "references": [
    {
      "path": "../../modules/service-discovery"
    },
    {
      "path": "../../modules/navigation"
    },
    {
      "path": "../../modules/context"
    },
    {
      "path": "../framework"
    },
    {
      "path": "../app"
    },
  ],
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}