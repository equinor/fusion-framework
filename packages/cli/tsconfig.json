    "outDir": "dist",
    "rootDir": "src",
    "target": "ES6",
    "declarationDir": "./dist/types",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@equinor/fusion-framework-cli/*-plugin.js": [
        "./src/lib/plugins/*"
      ],
    }
  },
  "references": [
    {
      "path": "../utils/observable"
    },
    {
      "path": "../utils/query"
    },
    {
      "path": "../modules/http"
    },
    {
      "path": "../modules/context"
    },
    {
      "path": "../modules/navigation"
    },
    {
      "path": "../modules/bookmark"
    },
    {
      "path": "../modules/app"
    },
    {
      "path": "../app"
    },
    {
      "path": "../react/framework"
    },
    {
      "path": "../react/modules/bookmark"
    },
    {
      "path": "../react/components/bookmark"
    },
    {
      "path": "../react/components/people-resolver"
    }
  ],
  "include": [
    "src/**/*",
    "types/*"
  ],
  "exclude": [
    "node_modules",
  ],
}