{
  "name": "fusion-framework",
  "version": "0.0.0",
  "description": "colleaction of fusion components",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "eslint packages/*/src/**",
    "clean": "rm -rf packages/*/node_modules && rm -rf node_modules",
    "build": "npm run build --workspaces --if-present",
    "build:clean": "rm -rf packages/*/dist && npm run build",
    "lint:report": "eslint --output-file eslint-report.log.json --format json packages/*/src/**",
    "npm:clean": "rm -rf node_modules && lerna exec 'rm -rf node_modules'",
    "docs": "typedoc --tsconfig tsconfig.typedoc.json",
    "yalc": "npm run build && lerna exec 'yalc push --private'",
    "test:build": "docker build -f node16.Dockerfile -t fusion_framework_16 ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equinor/fusion-framework.git"
  },
  "keywords": [
    "react",
    "fusion",
    "components"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/equinor/fusion-framework/issues"
  },
  "homepage": "https://github.com/equinor/fusion-framwork#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@equinor/eslint-config-fusion": "^1.0.1",
    "eslint": "^8.8.0",
    "eslint-plugin-rxjs": "^5.0.2",
    "husky": "^4.3.7",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.2.0",
    "typedoc": "^0.22.11",
    "typedoc-plugin-mermaid": "^1.6.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "typescript": ">=4.5"
  },
  "workspaces": [
    "packages/framework",
    "packages/framework-react",
    "packages/module",
    "packages/module-app",
    "packages/module-http",
    "packages/module-msal",
    "packages/module-service-discovery",
    "packages/module-telemetry",
    "packages/react-app",
    "packages/test-app"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./packages/**/src/**/*.{ts,tsx}": [
      "eslint --quiet --fix"
    ]
  }
}
