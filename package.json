{
  "name": "fusion-framework",
  "version": "0.0.0",
  "description": "colleaction of fusion components",
  "private": true,
  "scripts": {
    "install": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint packages/*/src/**",
    "build": "lerna run build --ignore '@equinor/fusion-framework-test-app'",
    "build:clean": "lerna exec 'rm -rf dist' && npm run build",
    "test": "lerna run test",
    "lint:report": "eslint --output-file eslint-report.log.json --format json packages/*/src/**",
    "npm:clean": "rm -rf node_modules && lerna exec 'rm -rf node_modules'",
    "docs": "typedoc --tsconfig tsconfig.typedoc.json",
    "yalc": "npm run build && lerna exec 'yalc push --private'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equinor/fusion-framework.git"
  },
  "keywords": [
    "react",
    "fusion",
    "components"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/equinor/fusion-framework/issues"
  },
  "homepage": "https://github.com/equinor/fusion-framwork#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@equinor/eslint-config-fusion": "0.1.2",
    "eslint": "^7.17.0",
    "eslint-plugin-rxjs": "^3.3.0",
    "husky": "^4.3.7",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.2.0",
    "typedoc": "^0.22.11",
    "typedoc-plugin-mermaid": "^1.6.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "typescript": ">=4.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./packages/**/src/**/*.{ts,tsx}": [
      "eslint --quiet --fix"
    ]
  }
}
