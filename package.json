{
  "name": "fusion-framework",
  "version": "0.0.0",
  "description": "colleaction of fusion components",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "eslint packages/*/src/**",
    "clean": "npm run clean:modules && npm run clean:build",
    "clean:modules": "rm -rf packages/*/node_modules && rm -rf node_modules",
    "clean:build": "rm -rf packages/*/dist",
    "build": "npm run build --workspaces --if-present",
    "build:clean": "rm -rf packages/*/dist && npm run build",
    "version": "npm i --package-lock-only && git add package-lock.json",
    "lint:report": "eslint --output-file eslint-report.log.json --format json packages/*/src/**",
    "npm:clean": "rm -rf node_modules && lerna exec 'rm -rf node_modules'",
    "docs": "typedoc --tsconfig tsconfig.typedoc.json",
    "yalc": "npm run build && lerna exec 'yalc push --private'",
    "test": "jest",
    "test:ci": "jest --runInBand --debug",
    "test:coverage": "jest --coverage",
    "test:show": "http-server coverage/lcov-report",
    "test:pack": "npm run clean && npm ci && npx lerna exec 'npm pack --dry-run'",
    "test:publish": "npm run clean && npm ci && npx lerna exec 'npm pack --dry-run'",
    "test:build": "docker build -f node16.Dockerfile -t fusion_framework_16 ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equinor/fusion-framework.git"
  },
  "keywords": [
    "react",
    "fusion",
    "components"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/equinor/fusion-framework/issues"
  },
  "homepage": "https://github.com/equinor/fusion-framwork#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@equinor/eslint-config-fusion": "^1.0.1",
    "@types/jest": "^27.4.1",
    "eslint": "^8.12.0",
    "eslint-plugin-rxjs": "^5.0.2",
    "husky": "^4.3.7",
    "jest": "^27.5.1",
    "lerna": "^5.0.0",
    "lint-staged": "^12.4.3",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.2.0",
    "typedoc": "^0.22.15",
    "typedoc-plugin-mermaid": "^1.6.0",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "typescript": ">=4.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./packages/**/src/**/*.{ts,tsx}": [
      "eslint --quiet --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "rm": "^0.1.8"
  }
}
