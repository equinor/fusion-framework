{
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["main", "alpha", "beta", "feat/*", "feature/*", "fix/*", "build/release"],
      "conventionalCommits": true,
      "ignoreChanges": ["*.spec.ts", "*.md"]
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.spec.ts", "*.md"],
      "message": "chore(release): publish"
    }
  },
  "packages": [
    "packages/*"
  ]
}
