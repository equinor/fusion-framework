{
    "version": "independent",
    "npmClient": "yarn",
    "changelogPreset": "conventionalcommits",
    "command": {
        "version": {
            "allowBranch": [
                "main",
                "alpha",
                "beta",
                "next",
                "feat/**",
                "feature/**",
                "fix/**",
                "release/**"
            ],
            "conventionalCommits": true,
            "ignoreChanges": ["*.spec.ts", "*.md"]
        },
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": ["*.spec.ts", "*.md"],
            "message": "chore(release): publish"
        }
    }
}
