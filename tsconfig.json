{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "paths": {
      "@equinor/fusion-framework-react-module": ["./packages/react/modules/module/src"],
      "@equinor/fusion-framework-react-module-*": ["./packages/react/modules/*/src"],
      "@equinor/fusion-framework-react-*": ["./packages/react/*/src"],
      "@equinor/fusion-framework-module": ["./packages/modules/module/src"],
      "@equinor/fusion-framework-module-*": ["./packages/modules/*/src"],
      "@equinor/fusion-framework-*": ["./packages/*/src"],
      "@equinor/fusion-framework": ["./packages/framework/src"],
      "fusion-framework-vite-plugin-*": ["./packages/vite-plugins/*/src"],
      "@equinor/fusion-observable": ["./packages/utils/observable/src"],
      "@equinor/fusion-query": ["./packages/utils/query/src"]
    }
  },
  "include": ["packages/**/src/**/*.ts", "packages/**/src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "lib", "*.spec.ts"]
}
