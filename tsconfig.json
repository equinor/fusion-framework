{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "*.spec.ts",
  ],
  "references": [
    {
      "path": "./packages/framework"
    },
    {
      "path": "./packages/react"
    },
  ]
}